{
  "name": "crud-problem5",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon src/server.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run": "npm run typeorm migration:run -- -d src/database/data-source.ts",
    "typeorm:generate": "npm run typeorm -- -d src/database/data-source.ts migration:generate",
    "typeorm:create": "npm run typeorm -- migration:create",
    "typeorm:revert": "npm run typeorm -- -d src/database/data-source.ts migration:revert"
  },
  "dependencies": {
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "sqlite3": "5.1.7",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "3.1.9",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  }
}
